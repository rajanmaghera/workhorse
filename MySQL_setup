mysql -u root -p

CREATE DATABASE schedulerDB

USE schedulerDB

CREATE TABLE people(peopleId VARCHAR(20), firstName VARCHAR(20), lastName VARCHAR(20), isStaff BOOLEAN);

CREATE TABLE shiftTime(parentWeekDayId VARCHAR(20), peoplesId VARCHAR(20), shiftRealTime VARCHAR(20);

CREATE TABLE timeTable(tableId VARCHAR(20));

CREATE TABLE weekDay(parentTableId VARCHAR(20), tileId VARCHAR(20));

CREATE USER 'user'@'localhost' identified by 'sompassword123';

GRANT ALL ON schedulerDB.* to 'user'@'localhost';
